.message_contents2
  .message_contents_list{data: {message: {id: message.id}}}
    .message_contents_list_text_1
      .message_contents_list_text_1_name
        = message.user.name
      .message_contents_list_text_1_day
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .message_contents_list_text_2
      - if message.content.present?
        %p.message_contents_list_text_2_lower_message
          = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?